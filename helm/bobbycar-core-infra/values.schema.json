{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "bobbycar-core-infra",
  "description": "This Helm Chart installs the required Bobbycar infrastructure components.",
  "default": {},
  "examples": [
    {
      "namespace": "bobbycar",
      "appName": "Bobbycar",
      "ocpDomain": "apps.ocp3.stormshift.coe.muc.redhat.com",
      "datagrid": {
        "replicas": 1,
        "type": "DataGrid",
        "cpu": "500m",
        "memory": "1Gi"
      },
      "amqBroker": {
        "instances": 1,
        "console": {
          "expose": true
        }
      },
      "kafka": {
        "cluster": {
          "brokerReplicas": 2,
          "zookeeperReplicas": 3
        },
        "bridge": {
          "replicas": 1,
          "port": 8080
        },
        "topic": {
          "gps": {
            "name": "bobbycar-gps",
            "partitions": 1,
            "replicas": 1,
            "retention": 60000
          },
          "metrics": {
            "name": "bobbycar-metrics",
            "partitions": 1,
            "replicas": 1,
            "retention": 60000
          },
          "zonechange": {
            "name": "bobbycar-zonechange",
            "partitions": 1,
            "replicas": 1,
            "retention": 300000
          }
        }
      }
    }
  ],
  "required": [
    "namespace",
    "appName",
    "ocpDomain",
    "datagrid",
    "amqBroker",
    "kafka"
  ],
  "properties": {
    "namespace": {
      "$id": "#/properties/namespace",
      "type": "string",
      "title": "The namespace / project",
      "description": "The namespace where to install the Bobbycar components.",
      "default": "",
      "pattern": "^[A-Za-z0-9_-]+$",
      "examples": [
        "bobbycar"
      ]
    },
    "appName": {
      "$id": "#/properties/appName",
      "type": "string",
      "title": "The appName",
      "description": "The application name",
      "default": "",
      "pattern": "^[A-Za-z0-9_-]+$",
      "examples": [
        "Bobbycar"
      ]
    },
    "ocpDomain": {
      "$id": "#/properties/ocpDomain",
      "type": "string",
      "title": "The ocpDomain",
      "description": "The wildcard Openshift app domain name.",
      "default": "",
      "pattern": "^.+$",
      "examples": [
        "apps.ocp3.stormshift.coe.muc.redhat.com"
      ]
    },
    "datagrid": {
      "$id": "#/properties/datagrid",
      "type": "object",
      "title": "Datagrid Custom Resource",
      "description": "Configures the Datagrid Custom Resource",
      "default": {},
      "examples": [
        {
          "replicas": 1,
          "type": "DataGrid",
          "cpu": "500m",
          "memory": "1Gi"
        }
      ],
      "required": [
        "replicas",
        "type",
        "cpu",
        "memory"
      ],
      "properties": {
        "replicas": {
          "$id": "#/properties/datagrid/properties/replicas",
          "type": "integer",
          "title": "The replicas",
          "description": "How many Datagrid nodes should be installed.",
          "default": 1,
          "examples": [
            1
          ]
        },
        "type": {
          "$id": "#/properties/datagrid/properties/type",
          "type": "string",
          "title": "Datagrid type",
          "description": "The type of cache to be used",
          "default": "",
          "examples": [
            "DataGrid"
          ]
        },
        "cpu": {
          "$id": "#/properties/datagrid/properties/cpu",
          "type": "string",
          "title": "cpu limit",
          "description": "The CPU Limit in Millicores",
          "default": "",
          "examples": [
            "500m"
          ]
        },
        "memory": {
          "$id": "#/properties/datagrid/properties/memory",
          "type": "string",
          "title": "Memory limit",
          "description": "The maximum amount of memory available for the Datagrid nodes.",
          "default": "",
          "examples": [
            "1Gi"
          ]
        }
      },
      "additionalProperties": true
    },
    "amqBroker": {
      "$id": "#/properties/amqBroker",
      "type": "object",
      "title": "The amqBroker Custom Resource",
      "description": "Configures the amqBroker Custom Resource.",
      "default": {},
      "examples": [
        {
          "instances": 1,
          "console": {
            "expose": true
          }
        }
      ],
      "required": [
        "instances",
        "console"
      ],
      "properties": {
        "instances": {
          "$id": "#/properties/amqBroker/properties/instances",
          "type": "integer",
          "title": "instances",
          "description": "How many broker instances should be installed",
          "default": 0,
          "examples": [
            1
          ]
        },
        "console": {
          "$id": "#/properties/amqBroker/properties/console",
          "type": "object",
          "title": "Admin console",
          "description": "Admin console config",
          "default": {},
          "examples": [
            {
              "expose": true
            }
          ],
          "required": [
            "expose"
          ],
          "properties": {
            "expose": {
              "$id": "#/properties/amqBroker/properties/console/properties/expose",
              "type": "boolean",
              "title": "expose",
              "description": "Should the broker admin console be exposed.",
              "default": false,
              "examples": [
                true
              ]
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "kafka": {
      "$id": "#/properties/kafka",
      "type": "object",
      "title": "Kafka Custom Resources",
      "description": "Configuration of Kafka related CRs.",
      "default": {},
      "examples": [
        {
          "cluster": {
            "brokerReplicas": 2,
            "zookeeperReplicas": 3
          },
          "bridge": {
            "replicas": 1,
            "port": 8080
          },
          "topic": {
            "gps": {
              "name": "bobbycar-gps",
              "partitions": 1,
              "replicas": 1,
              "retention": 60000
            },
            "metrics": {
              "name": "bobbycar-metrics",
              "partitions": 1,
              "replicas": 1,
              "retention": 60000
            },
            "zonechange": {
              "name": "bobbycar-zonechange",
              "partitions": 1,
              "replicas": 1,
              "retention": 300000
            }
          }
        }
      ],
      "required": [
        "cluster",
        "bridge",
        "topic"
      ],
      "properties": {
        "cluster": {
          "$id": "#/properties/kafka/properties/cluster",
          "type": "object",
          "title": "cluster",
          "description": "The Kafka cluster",
          "default": {},
          "examples": [
            {
              "brokerReplicas": 2,
              "zookeeperReplicas": 3
            }
          ],
          "required": [
            "brokerReplicas",
            "zookeeperReplicas"
          ],
          "properties": {
            "brokerReplicas": {
              "$id": "#/properties/kafka/properties/cluster/properties/brokerReplicas",
              "type": "integer",
              "title": "brokerReplicas",
              "description": "How many broker instances should be deployed",
              "default": 0,
              "examples": [
                2
              ]
            },
            "zookeeperReplicas": {
              "$id": "#/properties/kafka/properties/cluster/properties/zookeeperReplicas",
              "type": "integer",
              "title": "zookeeperReplicas",
              "description": "How many zookeeper instances should be deployed.",
              "default": 0,
              "examples": [
                3
              ]
            }
          },
          "additionalProperties": true
        },
        "bridge": {
          "$id": "#/properties/kafka/properties/bridge",
          "type": "object",
          "title": "Kafka bridge",
          "description": "Kafka bridge CR configuration",
          "default": {},
          "examples": [
            {
              "replicas": 1,
              "port": 8080
            }
          ],
          "required": [
            "replicas",
            "port"
          ],
          "properties": {
            "replicas": {
              "$id": "#/properties/kafka/properties/bridge/properties/replicas",
              "type": "integer",
              "title": "replicas",
              "description": "How many Kafka Bridge instances should be installed.",
              "default": 0,
              "examples": [
                1
              ]
            },
            "port": {
              "$id": "#/properties/kafka/properties/bridge/properties/port",
              "type": "integer",
              "title": "port",
              "description": "The port to listen for the Kafka bridge instances.",
              "default": 0,
              "examples": [
                8080
              ]
            }
          },
          "additionalProperties": true
        },
        "topic": {
          "$id": "#/properties/kafka/properties/topic",
          "type": "object",
          "title": "Kafka topics config",
          "description": "Configuration of the Kafka topics",
          "default": {},
          "examples": [
            {
              "gps": {
                "name": "bobbycar-gps",
                "partitions": 1,
                "replicas": 1,
                "retention": 60000
              },
              "metrics": {
                "name": "bobbycar-metrics",
                "partitions": 1,
                "replicas": 1,
                "retention": 60000
              },
              "zonechange": {
                "name": "bobbycar-zonechange",
                "partitions": 1,
                "replicas": 1,
                "retention": 300000
              }
            }
          ],
          "required": [
            "gps",
            "metrics",
            "zonechange"
          ],
          "properties": {
            "gps": {
              "$id": "#/properties/kafka/properties/topic/properties/gps",
              "type": "object",
              "title": "The GPS Kafka Topic",
              "description": "Configuration of the gps Kafka Topic.",
              "default": {},
              "examples": [
                {
                  "name": "bobbycar-gps",
                  "partitions": 1,
                  "replicas": 1,
                  "retention": 60000
                }
              ],
              "required": [
                "name",
                "partitions",
                "replicas",
                "retention"
              ],
              "properties": {
                "name": {
                  "$id": "#/properties/kafka/properties/topic/properties/gps/properties/name",
                  "type": "string",
                  "title": "name",
                  "description": "The topic name.",
                  "default": "",
                  "examples": [
                    "bobbycar-gps"
                  ]
                },
                "partitions": {
                  "$id": "#/properties/kafka/properties/topic/properties/gps/properties/partitions",
                  "type": "integer",
                  "title": "partitions",
                  "description": "The amount of topic partitions.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "replicas": {
                  "$id": "#/properties/kafka/properties/topic/properties/gps/properties/replicas",
                  "type": "integer",
                  "title": "replicas",
                  "description": "The amount of topic replicas.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "retention": {
                  "$id": "#/properties/kafka/properties/topic/properties/gps/properties/retention",
                  "type": "integer",
                  "title": "retention",
                  "description": "The retention time in milliseconds. How long to keep the messages.",
                  "default": 0,
                  "examples": [
                    60000
                  ]
                }
              },
              "additionalProperties": true
            },
            "metrics": {
              "$id": "#/properties/kafka/properties/topic/properties/metrics",
              "type": "object",
              "title": "Metrics Kafka Topic",
              "description": "Configuration of the Metrics Kafka Topic.",
              "default": {},
              "examples": [
                {
                  "name": "bobbycar-metrics",
                  "partitions": 1,
                  "replicas": 1,
                  "retention": 60000
                }
              ],
              "required": [
                "name",
                "partitions",
                "replicas",
                "retention"
              ],
              "properties": {
                "name": {
                  "$id": "#/properties/kafka/properties/topic/properties/metrics/properties/name",
                  "type": "string",
                  "title": "name",
                  "description": "The topic name.",
                  "default": "",
                  "examples": [
                    "bobbycar-metrics"
                  ]
                },
                "partitions": {
                  "$id": "#/properties/kafka/properties/topic/properties/metrics/properties/partitions",
                  "type": "integer",
                  "title": "partitions",
                  "description": "The amount of topic partitions.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "replicas": {
                  "$id": "#/properties/kafka/properties/topic/properties/metrics/properties/replicas",
                  "type": "integer",
                  "title": "replicas",
                  "description": "The amount of topic replicas.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "retention": {
                  "$id": "#/properties/kafka/properties/topic/properties/metrics/properties/retention",
                  "type": "integer",
                  "title": "retention",
                  "description": "The retention time in milliseconds. How long to keep the messages.",
                  "default": 0,
                  "examples": [
                    60000
                  ]
                }
              },
              "additionalProperties": true
            },
            "zonechange": {
              "$id": "#/properties/kafka/properties/topic/properties/zonechange",
              "type": "object",
              "title": "Zonechange Kafka Topic ",
              "description": "Configuration of the Zonechange Kafka Topic.",
              "default": {},
              "examples": [
                {
                  "name": "bobbycar-zonechange",
                  "partitions": 1,
                  "replicas": 1,
                  "retention": 300000
                }
              ],
              "required": [
                "name",
                "partitions",
                "replicas",
                "retention"
              ],
              "properties": {
                "name": {
                  "$id": "#/properties/kafka/properties/topic/properties/zonechange/properties/name",
                  "type": "string",
                  "title": "name",
                  "description": "The topic name.",
                  "default": "",
                  "examples": [
                    "bobbycar-zonechange"
                  ]
                },
                "partitions": {
                  "$id": "#/properties/kafka/properties/topic/properties/zonechange/properties/partitions",
                  "type": "integer",
                  "title": "partitions",
                  "description": "The amount of topic partitions.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "replicas": {
                  "$id": "#/properties/kafka/properties/topic/properties/zonechange/properties/replicas",
                  "type": "integer",
                  "title": "replicas",
                  "description": "The amount of topic replicas.",
                  "default": 0,
                  "examples": [
                    1
                  ]
                },
                "retention": {
                  "$id": "#/properties/kafka/properties/topic/properties/zonechange/properties/retention",
                  "type": "integer",
                  "title": "retention",
                  "description": "The retention time in milliseconds. How long to keep the messages.",
                  "default": 0,
                  "examples": [
                    300000
                  ]
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}